{
  "name": "playwright",
  "viewName": "Playwright",
  "type": "executer",
  "main": "app.js",
  "execProgram": "node",
  "imgUrl": "logo.png",
  "version": "1.0.0",
  "description": "Playwright Web Testing and Automation",
  "category": [
    "Testing"
  ],
  "keywords": [
    "testing",
    "playwright",
    "dotnet"
   ],
  "methods": [
    {
      "name": "executeDotnetTest",
      "viewName": "Execute .NET Test",
      "params": [
        {
          "name": "projectDirectoryPath",
          "viewName": "Project Directory Path",
          "description": "Path to a directory containing a .NET Playwright project",
          "type": "string",
          "required": true,
          "placeholder": "playwright/login-test",
          "learnUrl": "https://playwright.dev/dotnet/docs/writing-tests"
        },
        {
          "name": "imageTag",
          "viewName": "Docker Image Tag",
          "description": "Alternate tag for \"mcr.microsoft.com/playwright/dotnet\" Docker image (default is \"latest\")",
          "type": "string",
          "default": "",
          "placeholder": "latest",
          "learnUrl": "https://mcr.microsoft.com/en-us/product/playwright/dotnet/tags"
        },
        {
          "name": "additionalCommandArguments",
          "viewName": "Additional Command Arguments",
          "description": "Additional arguments if needed for command \"dotnet test\"",
          "type": "string",
          "placeholder": "--verbosity minimal",
          "default": "",
          "learnUrl": "https://learn.microsoft.com/en-us/dotnet/core/tools/dotnet-test"
        }
      ]
    }
  ]
}
