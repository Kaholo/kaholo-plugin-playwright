{
  "name": "playwright",
  "viewName": "Playwright",
  "type": "executer",
  "main": "app.js",
  "execProgram": "node",
  "exposeRoute": false,
  "imgUrl": "logo.png",
  "version": "0.1.0",
  "description": "Kaholo Plugin for running Playwright tests in Docker containers",
  "category": [
    "Testing"
  ],
  "keywords": [
    "testing",
    "playwright",
    "dotnet"
   ],
  "methods": [
    {
      "name": "executeDotnetTest",
      "viewName": "Execute .NET Test",
      "params": [
        {
          "name": "projectDirectoryPath",
          "viewName": "Project Directory Path",
          "type": "string",
          "required": true,
          "placeholder": "/home/user/dotnet-project",
          "description": "Path on the agent to the directory containing .NET project"
        },
        {
          "name": "imageTag",
          "viewName": "Docker Image Tag",
          "description": "Tag of the \"mcr.microsoft.com/playwright/dotnet\" Docker image to use",
          "type": "autocomplete",
          "autocompleteType": "function",
          "functionName": "listDockerImageTagsAuto",
          "required": false,
          "default": "latest"
        }
      ]
    }
  ]
}
