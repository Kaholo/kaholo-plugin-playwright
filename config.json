{
  "name": "playwright",
  "viewName": "Playwright",
  "type": "executer",
  "main": "app.js",
  "execProgram": "node",
  "imgUrl": "logo.png",
  "version": "1.0.0",
  "description": "Playwright Web Testing and Automation",
  "category": [
    "Testing"
  ],
  "keywords": [
    "testing",
    "playwright",
    "dotnet"
   ],
  "methods": [
    {
      "name": "executeDotnetTest",
      "viewName": "Execute .NET Test",
      "params": [
        {
          "name": "projectDirectoryPath",
          "viewName": "Project Directory Path",
          "description": "Path on the agent to the directory containing .NET project",
          "type": "string",
          "required": true,
          "placeholder": "/home/user/dotnet-project"
        },
        {
          "name": "imageTag",
          "viewName": "Docker Image Tag",
          "description": "Alternate tag for \"mcr.microsoft.com/playwright/dotnet\" Docker image if needed (default is \"latest\").",
          "type": "string",
          "default": "latest",
          "placeholder": "latest"
        },
        {
          "name": "additionalCommandArguments",
          "viewName": "Additional Command Arguments",
          "description": "Additional arguments if needed for command \"dotnet test\"",
          "type": "string",
          "placeholder": "--verbosity minimal",
          "default": ""
        }
      ]
    }
  ]
}
